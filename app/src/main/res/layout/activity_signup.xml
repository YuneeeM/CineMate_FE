<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".account.SignupActivity">

    <!--로고 이미지-->
    <ImageView
        android:id="@+id/activity_signup_ivLogo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/cinemate_logo"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <!--이메일-->
    <EditText
        android:id="@+id/activity_signup_etEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="이메일을 입력해주세요."
        android:padding="15dp"
        android:background="@drawable/bg_login_edit"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:inputType="textEmailAddress"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_signup_ivLogo"/>

    <!--비밀번호-->
    <EditText
        android:id="@+id/activity_signup_etPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="비밀번호를 입력해주세요."
        android:padding="15dp"
        android:background="@drawable/bg_login_edit"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:inputType="textPassword"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_signup_etEmail"/>

    <!--닉네임-->
    <EditText
        android:id="@+id/activity_signup_etNickname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="닉네임을 입력해주세요."
        android:padding="15dp"
        android:background="@drawable/bg_login_edit"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:inputType="text"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_signup_etPassword"/>

    <!--전화번호-->
    <EditText
        android:id="@+id/activity_signup_etPhone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="전화번호를 입력해주세요."
        android:padding="15dp"
        android:background="@drawable/bg_login_edit"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:inputType="phone"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_signup_etNickname"/>

    <!--장르-->
    <EditText
        android:id="@+id/activity_signup_etGenre"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="좋아하는 장르를 입력해주세요."
        android:padding="15dp"
        android:background="@drawable/bg_login_edit"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:inputType="text"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_signup_etPhone"/>

    <!--회원가입 버튼-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_signup_btnSignup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="15dp"
        android:background="@drawable/bg_login_edit"
        android:backgroundTint="#CC2C6B"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="회원가입 등록"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_signup_etGenre"/>



</androidx.constraintlayout.widget.ConstraintLayout>